
<p id="count">
  <%= count %>
</p>


<div id="buttons">
  <button id="increment">Increment</button>
  <div class="by-amount">
    <button data-amount="2">+2</button>
    <button data-amount="3">+3</button>
    <button data-amount="4">+4</button>
  </div>
</div>

<script type="text/javascript">
  $('increment').on('click', function () {
    new Ajax.Updater('count', '/increment');
  });
  
  $('buttons').on('click', 'button[data-amount]', function (e) {
    var element = e.element();
    var amount = element.readAttribute('data-amount');
    new Ajax.Updater('count', '/increment_by/' + amount);
  });
</script>

<style type="text/css" media="screen">
  #count {
    font-size: 72px;
    text-align: center;
  }
  
  #increment {
    width: 100%;
  }
  
  #buttons button {
    box-sizing: border-box;
    font-size: 24px;
    padding: 10px;
  }
  
  #buttons .by-amount button {
    width: 32%;
    margin-right: 2%;
  }
  
  #buttons .by-amount button:last-child {
    margin-right: 0%;
  }
</style>